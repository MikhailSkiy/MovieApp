<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/about_item_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/button_corner_radius"
    app:cardElevation="@dimen/detail_item_elevation"
    app:cardUseCompatPadding="true">

    <ImageView
        android:id="@+id/about_item_icon"
        android:src="@drawable/rate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/call_item_title_vertical_margin"
        android:paddingLeft="@dimen/call_item_margin"
        android:paddingRight="@dimen/call_item_margin"
        android:paddingTop="@dimen/call_item_title_vertical_margin">

        <TextView
            android:id="@+id/about_item_title"
            style="@style/AboutUsItemText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            style="@style/AboutUsItemText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=">"/>

    </LinearLayout>

</android.support.v7.widget.CardView>



