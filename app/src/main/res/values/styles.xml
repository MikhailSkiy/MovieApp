<resources>

    <style name="AppTheme" parent="BaseTheme"/>

    <!-- Base application theme. -->
    <style name="BaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item> 
        <item name="colorPrimaryDark">@color/primary_dark</item> 
        <item name="colorAccent">@color/accent</item>
        <item name="selectableItemBackground">@drawable/selectable_item_background</item>
        <item name="android:selectableItemBackground">@drawable/selectable_item_background</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="FabStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/fab_compat_margin</item>
        <item name="android:src">@drawable/ic_add_black</item>
        <item name="borderWidth">1dp</item>
        <item name="elevation">6dp</item>
        <item name="pressedTranslationZ">12dp</item>
        <item name="rippleColor">@android:color/white</item>
    </style>

    <style name="FavoriteFabStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">180dp</item>
        <item name="android:layout_marginRight">@dimen/fab_compat_margin_min</item>
        <item name="android:src">@drawable/ic_heart_outline_grey</item>
        <item name="borderWidth">1dp</item>
        <item name="elevation">6dp</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="pressedTranslationZ">12dp</item>
        <item name="rippleColor">@android:color/white</item>
    </style>

    <style name="AddToWatchlistFabStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">130dp</item>
        <item name="android:layout_marginRight">@dimen/fab_compat_margin_min</item>
        <item name="android:src">@drawable/ic_playlist_plus_grey</item>
        <item name="borderWidth">1dp</item>
        <item name="elevation">6dp</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="pressedTranslationZ">12dp</item>
        <item name="rippleColor">@android:color/white</item>
    </style>

    <style name="AddToListFabStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">@dimen/fab_compat_margin_min</item>
        <item name="android:layout_marginBottom">80dp</item>
        <item name="android:src">@drawable/ic_star_outline_grey</item>
        <item name="borderWidth">1dp</item>
        <item name="elevation">6dp</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="pressedTranslationZ">12dp</item>
        <item name="rippleColor">@android:color/white</item>
    </style>

    <!-- Call Item -->
    <style name="AboutUsItemText">
        <item name="android:textColor">@color/darkish_purple</item>
        <item name="android:textSize">15.3sp</item>
    </style>

    <color name="orange">#F4511E</color>
    <color name="primary">#00BCD4</color>
    <color name="primary_dark">#0097A7</color>
    <color name="accent">#FFEB3B</color>
    <color name="accent_translucent">#80FFEB3B</color>
    <color name="accent_bright">#FFF493</color>
    <color name="dark">#000000</color>
    <color name="white">#ffffff</color>
    <color name="colorPrimary">#607D8B</color>
    <color name="colorPrimaryDark">#455A64</color>
    <color name="colorPrimaryLight">#CFD8DC</color>
    <color name="colorAccent">#FFC107</color>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
